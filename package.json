{
  "name": "react-template",
  "version": "1.0.0",
  "author": "Andre Steudel",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server/server.js",
    "start:client": "webpack-dev-server --mode development --open --hot",
    "start:server": "cross-env TS_NODE_FILES=true TS_NODE_PROJECT=tsconfig.server.json ts-node ./src/server/server.tsx",
    "build": "yarn build:client && yarn build:server",
    "build:client": "cross-env NODE_ENV=production webpack --mode production",
    "build:server": "cross-env NODE_ENV=production webpack --config webpack.server.config.js --mode production"
  },
  "dependencies": {
    "@types/react-loadable": "^5.5.2",
    "express": "^4.17.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-class-properties": "^7.7.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@types/express": "^4.17.2",
    "@types/node": "^12.12.7",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/webpack": "^4.39.8",
    "@types/webpack-env": "^1.14.1",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "react-loadable": "^5.5.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "tslint": "^5.20.1",
    "tslint-immutable": "^6.0.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.9.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2"
  }
}
